mixin tm-single(name, positionm description)
  .tm__single
    a.tm__img(style='background-image:url("../../img/team.png")')
      .tm__img-name= name
      .tm__img-position= position
    .team__description
      p= description

section.section.section_dark-lighten.tm
  .section__container
    .section__column
      h2.section__title-primary Testimonial
      .tm__wrapper
        #owl1.owl-carousel
          .tm__single.item
            a(href="#" style='background-image:url("../../img/team.png")').tm__img
              .tm__img-description
                p.tm__img-name yeap
                p.tm__img-position test
            .tm__description
              p hello
          .tm__single.item
            a(href="#" style='background-image:url("../../img/team.png")').tm__img
              p.tm__img-name yeap
              p.tm__img-position test
            .tm__description
              p hello
          -var count= 0;
          -while(count < 5)
            .tm__single.item
              a(href="#" style='background-image:url("../../img/team.png")').tm__img
                p.tm__img-name yeap
                p.tm__img-position test
              .tm__description
                p hello
                -count++
          